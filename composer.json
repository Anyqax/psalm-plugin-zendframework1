{
    "name": "matthewbdaly/psalm-plugin-zendframework1",
    "description": "Psalm plugin for Zend Framework 1",
    "type": "psalm-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew Daly",
            "email": "matthewbdaly@gmail.com"
        }
    ],
    "require": {
        "vimeo/psalm": "^3.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "squizlabs/php_codesniffer": "^3.3",
        "zendframework/zendframework1": "^1.12"
    },
    "extra": {
        "psalm" : {
            "pluginClass": "Matthewbdaly\\ZendFramework1Plugin\\Plugin"
        }
    },
    "autoload": {
        "psr-4": {
            "Matthewbdaly\\ZendFramework1Plugin\\": ["."]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Matthewbdaly\\ZendFramework1Plugin\\Tests\\": "tests"
        }
    },
    "scripts" : {
        "check": [
            "@cs-check",
            "@test",
            "@analyze"
        ],
        "analyze": "psalm",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
